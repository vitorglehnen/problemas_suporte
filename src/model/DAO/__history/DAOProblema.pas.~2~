unit DAOProblema;

interface

uses
  FireDAC.Comp.Client, uConexao;

type
  TDAOProblema = class
  private
    FConn: TConexao;
    FQuery: TFDQuery;
  public
    function BuscaProblemas : TFDQuery;
    constructor Create;
    destructor Destroy; override;
  end;

implementation

{ TDAOProblemas }

function TDAOProblemas.BuscaProblemas: TFDQuery;
begin
  FQuery:= FConn.CriarQuery;

  FQuery.Open('SELECT titulo FROM problemas ORDER BY titulo');
  FQuery.FetchAll;

  Result:= FQuery;
end;

constructor TDAOProblemas.Create;
begin
  FConn:= TConexao.Create;
end;

destructor TDAOProblemas.Destroy;
begin
  FConn.Free;
  FQuery.Free;
  inherited;
end;

end.
